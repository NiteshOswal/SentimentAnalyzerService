extends layout

block content
    .row
        .col-lg-8.col-md-8.col-sm-8.col-xs-8.col-lg-offset-2.col-md-offset-2.col-sm-offset-2.col-xs-offset-2
            form.row(role="form", name="search", id="search")
                .form-group.col-lg-6.col-md-6.col-sm-6
                    input.form-control(name="topic", id="topic", placeholder="Enter Name, Place, Movie or a Twitter Hashtag")
                .form-group.col-lg-4.col-md-4.col-sm-4
                    select.form-control(name="count", id="count")
                        - var options = [100, 500, 1000, 2000, 5000, 10000, 50000, 100000]
                        each option in options
                            option(value=option)=option
                .form-group.col-lg-2.col-md-2.col-sm-2
                    button.btn.btn-info.btn-block(type="submit") Submit
            .panel.panel-default#details(style="display: none;")
                .panel-body
                    h1#htopic
                    h4#hstatus
                    h4#hrating
                    h4#stars

                    canvas#stats(style="width: 100%;", height="400")




