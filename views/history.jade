extends layout

block content
    .row
        .col-lg-10.col-lg-offset-1
            h2 History
                |  
                button.btn-flush.btn.btn-danger.btn-md(type="button", data-file="", data-trigger=".history-rows") Flush All


    .row
        .col-lg-10.col-lg-offset-1
            .pull-right
            br
            table.table.table-striped.table-bordered#history-table
                thead
                    tr
                        th(width="100").text-center #
                        th Topic
                        th Downloaded Date
                        th.text-center Actions
                tbody
                    each f in data
                        tr(id=f[1].toString() + f[0].toString(), class="history-rows")
                            td(width="100").text-center=f[0]
                            td=f[1]
                            td=f[2]
                            td.text-center
                                a.btn.btn-success.btn-sm(href="/?name=" + f[1] + "&date=" + f[2]) View Stats
                                |   
                                button.btn-flush.btn.btn-danger.btn-sm(type="button", data-file=f[1], data-date=f[2], data-trigger="#" + f[1].toString() + f[0].toString()) Flush


